<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:orientation="vertical">

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_alarm_switch_model"
            style="@style/usertext"
            android:text="报警开关： 智能报警" />

    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/usertext"
            android:text="报警体温上下限：" />

        <TextView
            android:id="@+id/tv_down_temperature"
            style="@style/usertext"
            android:gravity="center"
            android:text="35.8" />

        <TextView
            android:id="@+id/tv_up_temperature"
            style="@style/usertext"
            android:gravity="center"
            android:text="37.4" />

    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="报警铃声音量："
            android:textColor="@color/text_clo"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher" />

        <SeekBar
            android:id="@+id/volume_seekBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:focusable="true"
            android:max="100"
            android:progressDrawable="@drawable/bg_seekbar"
            android:thumb="@drawable/thumb_seekbar" />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/usertext"
            android:text="远程监控功能：" />

        <Switch
            android:id="@+id/switch_remote_listen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/usertext"
            android:text="温度单位： " />

        <TextView
            android:id="@+id/tv_temperature_unit_of_measure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="℃"
            android:textSize="16dp" />

    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/usertext"
            android:text="设备固件版本检测" />

    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/usertext"
            android:text="设备软件版本检测" />

    </LinearLayout>

    <View style="@style/bg_line"></View>

    <LinearLayout
        style="@style/mid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            style="@style/usertext"
            android:text="关于" />

    </LinearLayout>

    <View style="@style/bg_line"></View>


    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible"></LinearLayout>

</LinearLayout>